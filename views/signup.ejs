<%- include("templates/header") %>

<main class="form-signin w-100 m-auto py-4">
  <form id="login-form" action="/submitUser" method="post">
    <h1 class="h3 mb-3 fw-normal">Create User</h1>

    <div class="form-floating input-field">
      <input name="name" type="text" class="form-control" id="floatingInput" placeholder="name@example.com">
      <label for="floatingInput">Name</label>
    </div>
    <div class="form-floating input-field">
      <input name="email" type="text" class="form-control" id="floatingInput" placeholder="name@example.com">
      <label for="floatingInput">Email address</label>
    </div>
    <div class="form-floating input-field">
      <input name="password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
      <label for="floatingPassword">Password</label>
    </div>
    <button class="w-100 btn btn-lg btn-primary input-field" type="submit">Submit</button>
  </form>
</main>

<%- include("templates/footer") %>